<UserControl x:Class="Twister.Views.FatigueTestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Twister.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Border DockPanel.Dock="Top"
                Height="50"
                Background="DeepPink"
                VerticalAlignment="Top"
                BorderThickness="0,0,0,2" BorderBrush="DarkGray" Visibility="{Binding Path=IsSimulated, Converter={StaticResource BoolToVisConverter}}">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="SIMULATED" FontWeight="Bold"
                       FontSize="20" />
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Grid.RowSpan="2"> 
                <Button Content="Run" Padding="25" Foreground="White" Background="Green" FontSize="14"
                        Command="{Binding RunCommand}"/>
                <Button Content="Pause" Padding="25" Margin="0,15" Background="Yellow" FontSize="14"
                        Command="{Binding PauseCommand}"/>
                <Button Content="Finish" Padding="25" Foreground="White" Background="Red" FontSize="14"
                        Command="{Binding FinishCommand}"/>
            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="450">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="CW" HorizontalAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock Grid.Column="1" Text="ACTUAL" HorizontalAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock Grid.Column="2" Text="CCW" HorizontalAlignment="Center"
                           FontWeight="Bold" />

                <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding CurrentClockwiseTarget, StringFormat='n3'}" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Padding="15" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding CurrentAngle, StringFormat='n3'}" FontSize="36"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Padding="15" />
                <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding CurrentCounterClockwiseTarget, StringFormat='n3'}" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center" Padding="15" />
                
                <Grid Grid.Row="2" Grid.ColumnSpan="3" Height="9" VerticalAlignment="Top" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0" BorderThickness="0" Foreground="LightGreen" Value="{Binding CurrentCwPercent}" FlowDirection="RightToLeft" Maximum="1.0"/>
                    <ProgressBar Grid.Column="1" BorderThickness="0" Foreground="LightSalmon" Value="{Binding CurrentCcwPercent}" FlowDirection="LeftToRight" Maximum ="1.0"/>
                </Grid>
            </Grid>

            

            <Grid Grid.Row="1" Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row ="0" HorizontalAlignment="Center"
                           Text="CYCLES" FontWeight="Bold" />
                <TextBlock Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Top" 
                           Text="{Binding CycleCount}"
                           FontSize="32" />
            </Grid>
            
            <DataGrid Grid.Row="2" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    SelectedItem="{Binding SelectedTestConditionViewModel}"
                    ItemsSource="{Binding TestConditions}"
                    IsReadOnly="True"
                    AutoGenerateColumns="False"
                    Margin="0,25,15,5"
                    MinWidth="0"
                    Style="{StaticResource TestSetupDataGridStyle}">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Yellow" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Binding="{Binding ClockwiseTorque, StringFormat='n0', ValidatesOnExceptions=True}"
                            Header="CW Torque (in-lbs)" 
                            Width="auto"/>
                        <DataGridTextColumn
                            Binding="{Binding CounterclockwiseTorque, StringFormat='n0', ValidatesOnExceptions=True}"
                            Header="CCW Torque (in-lbs)" 
                            Width="auto"/>
                        <DataGridTextColumn
                            Binding="{Binding CyclesPerSecond, StringFormat='n0', ValidatesOnExceptions=True}"
                            Header="Cycles Per Second" 
                            Width="auto"/>
                        <DataGridTextColumn
                            Binding="{Binding CalibrationInterval, StringFormat='n0'}"
                            Header="Calibration Interval" 
                            Width="auto"/>
                        <DataGridTextColumn
                            Binding="{Binding CyclesRequired, StringFormat='n0'}"
                            Header="Cycles" 
                            Width="auto"/>
                        <DataGridTextColumn
                            Binding="{Binding CyclesCompleted, StringFormat='n0', UpdateSourceTrigger=PropertyChanged}"
                            Header="Completed"
                            Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>            
        </Grid>
    </DockPanel>
</UserControl>