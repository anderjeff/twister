<UserControl x:Class="Twister.Views.FatigueTestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Twister.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Border DockPanel.Dock="Top"
                Height="50"
                Background="DeepPink"
                VerticalAlignment="Top"
                BorderThickness="0,0,0,2" BorderBrush="DarkGray">
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Text="SIMULATED" FontWeight="Bold"
                       FontSize="20" />
        </Border>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Text="CW" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock Grid.Column="1" Text="ACTUAL" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           FontWeight="Bold" />
                <TextBlock Grid.Column="2" Text="CCW" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                           FontWeight="Bold" />

                <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding CurrentClockwiseTarget}" FontSize="20"
                           VerticalAlignment="Center" Padding="15" />
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding CurrentAngle}" FontSize="36"
                           VerticalAlignment="Center" Padding="15" />
                <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding CurrentCounterClockwiseTarget}" FontSize="20"
                           VerticalAlignment="Center" Padding="15" />
            </Grid>

            <DataGrid Grid.Row="1"
                      SelectedItem="{Binding SelectedTestCondition}"
                      ItemsSource="{Binding TestConditions}"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      HorizontalScrollBarVisibility="Auto"
                      Margin="0,5,15,5"
                      MinWidth="0"
                      Style="{StaticResource TestSetupDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding ClockwiseTorque, StringFormat='n0', ValidatesOnExceptions=True, UpdateSourceTrigger=LostFocus}"
                        Header="CW Torque (in-lbs)" />
                    <DataGridTextColumn
                        Binding="{Binding CounterclockwiseTorque, StringFormat='n0', ValidatesOnExceptions=True, UpdateSourceTrigger=LostFocus}"
                        Header="CCW Torque (in-lbs)" />
                    <DataGridTextColumn
                        Binding="{Binding CyclesPerSecond, StringFormat='n0', ValidatesOnExceptions=True, UpdateSourceTrigger=LostFocus}"
                        Header="Cycles Per Second" />
                    <DataGridTextColumn
                        Binding="{Binding CalibrationInterval, StringFormat='n0', UpdateSourceTrigger=LostFocus}"
                        Header="Calibration Interval" />
                    <DataGridTextColumn
                        Binding="{Binding CyclesRequired, StringFormat='n0', UpdateSourceTrigger=LostFocus}"
                        Header="Cycles" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>