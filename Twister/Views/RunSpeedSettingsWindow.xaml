<Window x:Class="Twister.Views.RunSpeedSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twister.Views"
        xmlns:vm="clr-namespace:Twister.ViewModels"
        mc:Ignorable="d"
        Title="RunSpeedSettingsWindow" Height="300" Width="300">

    <Window.DataContext>
        <vm:RunSpeedSettings_VM />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Run Speed" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RunSpeed, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Move Speed" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding MoveSpeed, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</Window>